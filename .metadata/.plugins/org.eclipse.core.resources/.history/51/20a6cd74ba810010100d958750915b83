#ifndef APP_H
#define APP_H
/*
 * Application (FreeRTOS native API)
 * - Parse UART frame TYPE_Q/CMD_BOOT and ACK
 * - UART1 <-> ESP32 ; UART3 -> PC log
 */
#include "stm32f1xx.h"
#include <stdint.h>
#include <stdarg.h>

/* ===== Clocks ===== */
#define SYS_CORE_CLOCK_HZ 72000000UL

/* ===== GPIO: LED PC13 ===== */
#define LED_PORT GPIOC
#define LED_PIN  13

/* ===== UARTs ===== */
#define UART1_BAUD 115200U /* ESP32 link */
#define UART3_BAUD 115200U /* PC log */

/* ===== Protocol ===== */
enum {
    STX    = 0x55,
    TYPE_Q = 0x10,
};
enum {
    CMD_INFO   = 1,
    CMD_BOOT   = 2,
    CMD_ERASE  = 3,
    CMD_BEGIN  = 4,
    CMD_VERIFY = 5,
    CMD_RUN    = 6
};
#define ACK_BYTE  0xAA
#define NACK_BYTE 0xEE

/* ===== Boot Metadata (tr√πng bootloader) ===== */
#define META_MAGIC      0x4D455441UL
#define MF_BOOT_REQ     (1u<<0)
#define MF_VALID        (1u<<1)
#define MF_IN_PROGRESS  (1u<<2)

#ifndef FLASH_64K
  #define META_BASE   0x0801FC00UL
#else
  #define META_BASE   0x0800FC00UL
#endif

typedef struct {
    uint32_t magic;
    uint32_t version;
    uint32_t size;
    uint32_t crc32;
    uint32_t flags;
} bl_meta_t;

/* ===== UART helpers ===== */
void uart_init(void);
void uart1_write(const uint8_t* p, uint32_t n);
void uart1_write_str(const char* s);
int  uart1_read_byte(uint8_t* out, uint32_t timeout_ms);
void uart3_write_str(const char* s);
void log_printf(const char* fmt, ...);

/* ===== CRC16 (CCITT, init=0xFFFF) ===== */
uint16_t crc16_ccitt(const uint8_t* data, uint32_t len);

/* ===== Metadata helper ===== */
void meta_request_boot(void);

#endif /* APP_H */
